<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
		android:orientation="vertical" 
        android:background="@null" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android">
  
    <TextView 
    android:id="@+id/titleBar"
    android:textSize="18sp"
    android:textColor="@color/white"
    android:gravity="center" 
    android:background="@drawable/skinpic_green" 
    android:layout_width="fill_parent" 
    android:layout_height="44.0dip" 
    android:text="查看流量统计" />

    <ScrollView 
    android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical" 
    android:background="#ffecf0f1"
    android:layout_width="fill_parent" 
    android:layout_height="0.0px" 
    android:layout_weight="1.0">
    
        <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" >

            <TextView 
            android:textColor="@color/grayblack"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="14dip"
            android:layout_marginTop="7dip"
            android:layout_marginBottom="7dip"
            android:text="今日流量" />
            
            <include 
            android:id="@+id/trafic_today_tbl" 
            layout="@layout/setting_trafic_table" />
            
           <TextView 
           android:textColor="@color/grayblack"
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
           android:layout_marginLeft="14dip"
           android:layout_marginTop="7dip"
           android:layout_marginBottom="7dip"
           android:text="本月流量" />
           
			<include 
			android:id="@+id/trafic_month_tbl" 
			layout="@layout/setting_trafic_table" />
            
            <TextView 
            android:textSize="12sp"
            android:textColor="@color/grayblack"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dip"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="10dip"
            android:text="*流量统计只计算GPRS或3G数据流量，不包括wifi流量" />
            
            
           <Button 
           android:textSize="14sp"
           android:textColor="@color/white"
           android:layout_margin="10dip"
           android:layout_width="fill_parent" 
           android:layout_height="wrap_content" 
           android:text="清空流量数据"/>
        </LinearLayout>


    </ScrollView>
</LinearLayout>