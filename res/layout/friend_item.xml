<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <!--上面：ListItem的焦点 : android:descendantFocusability="blocksDescendants"-->

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/ll_img"
                      android:background="@drawable/list_item_select"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_img"
                       android:layout_width="55.0dip"
                       android:layout_height="55.0dip"
                       android:layout_margin="5dip"
                       android:src="@drawable/default_avatar_shadow"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/ll_tv"
                      android:orientation="vertical"
                      android:background="@drawable/list_item_select"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content">

            <TextView android:textSize="@dimen/x_text_size"
                      android:textColor="@color/black"
                      android:id="@+id/tv_name"
                      android:layout_width="fill_parent"
                      android:layout_height="65.0dip"
                      android:singleLine="true"
                      android:layout_weight="1.0"
                      android:gravity="center_vertical"
                      android:text="用户名"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>