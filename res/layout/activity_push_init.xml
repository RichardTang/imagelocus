<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grayblack" >

    <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="@drawable/loading_bg">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">

            <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请稍后..."
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    />
        </LinearLayout>

        <TextView
                android:id="@+id/text_init_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Channel绑定信息："
                android:textStyle="bold"/>

        <Button
                android:id="@+id/btn_init_getid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_init_message"
                android:visibility="gone"
                android:text="查询我的云推id"/>

        <Button
                android:id="@+id/btn_init_go"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_init_getid"
                android:visibility="gone"
                android:text="进入聊天界面"/>

    </RelativeLayout>

</RelativeLayout>